<section class="bg-[#ECF7B9] lg:!py-[100px] md:py-20 py-12">
  <div class="max-w-[1180px] mx-auto px-5 flex max-lg:flex-wrap justify-center gap-6">
    <div class="bg-cover bg-center rounded-2xl px-5 py-8 text-white flex flex-col justify-between xl:!max-w-[364px] lg:!max-w-[330px] lg:h-[558px] max-w-[700px]" style="background-image: url('{{ section.settings.left_bg | image_url }}');">
      <div>
        <h2 class="!text-[28px] md:!text-[32px] font-medium !leading-[132%] mb-4 lg:whitespace-pre-line">
          {{ section.settings.left_heading }}
        </h2>
        <p class="text-sm md:text-base font-normal !leading-[150%] mb-4">
          {{ section.settings.left_description }}
        </p>
        <p class="font-bold text-base leading-[150%]">{{ section.settings.left_subtext }}</p>
      </div>
      <div>
        <a href="{{ section.settings.button_link }}" class="inline-block px-5.5 py-3.5 bg-[#9787FE] text-white font-semibold leading-[100%] shadow-md text-base rounded">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    <div class="flex flex-wrap lg:gap-6 gap-4 lg:max-w-[752px] max-w-[700px] max-lg:mx-auto max-xl:justify-center">
      {% for block in section.blocks %}
        <div class="bg-white rounded-2xl shadow-md md:p-6 md:px-5 !gap-0 p-4 text-center xl:max-w-[364px] lg:max-w-[300px] md:max-w-[320px] sm:max-w-[240px] md:h-[267px] flex flex-col">
          {% if block.settings.icon != blank %}
            <div>
              <img src="{{ block.settings.icon | image_url: width: 60 }}" alt="icon"
                   width="60" height="60" class="md:!w-[60px] md:!h-[60px] !h-10 !w-10 mx-auto" />
            </div>
          {% endif %}
          <h3 class="text-base font-medium !leading-[120%] text-[#010101] !pt-4 !pb-3">{{ block.settings.title }}</h3>
               <p class="text-xs font-normal !leading-[120%] text-black">
            {{ block.settings.paragraph }}
          </p>
          <p class="md:text-base text-sm text-[#010101B2] font-normal !leading-[150%] !pt-[6px]">
            {{ block.settings.description }}
          </p>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
  @import url('https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css');
</style>

{% schema %}
{
  "name": "Big Plans",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_bg",
      "label": "Left Background Image"
    },
    {
      "type": "textarea",
      "id": "left_heading",
      "label": "Left Heading",
      "default": "Big Plans?\nSmall Effort.\nGalaCube Handles It All."
    },
    {
      "type": "textarea",
      "id": "left_description",
      "label": "Left Description",
      "default": "From scratch to scheduled – we bet you can book your full event in less than 24 hours."
    },
    {
      "type": "text",
      "id": "left_subtext",
      "label": "Left Subtext",
      "default": "Let's make it happen."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Plan your Event"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    }
  ],
  "blocks": [
    {
      "type": "plans_card",
      "name": "Plans Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Flexible Backup Options"
        },
         {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Things change – and that’s okay."
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "From scratch to scheduled – we bet you can book your full event in less than 24 hours."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Big Plans",
      "category": "Custom",
      "blocks": [
        { "type": "plans_card" },
        { "type": "plans_card" },
        { "type": "plans_card" },
        { "type": "plans_card" }
      ]
    }
  ]
}

{% endschema %}
