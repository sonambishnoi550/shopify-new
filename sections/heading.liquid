<!-- sections/simple-section.liquid -->
<section class="simple-section text-center py-10">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Simple Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to My Store"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "This is a simple section you can edit in the theme editor."
    }
  ],
  "presets": [
    {
      "name": "Simple Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
