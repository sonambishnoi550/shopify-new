<style>
  @import url('https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css');
</style>

<header class="bg-white shadow">
  <div class="max-w-[1180px] mx-auto !flex !justify-between items-center py-4 px-5">
    <!-- Logo -->
    {% if section.settings.logo != blank %}
      <a href="/" class="flex items-center">
        <img
          src="{{ section.settings.logo | image_url }}"
          alt="Logo"
          class="!h-[55px] !w-[110px] object-contain transition-transform duration-300 hover:scale-105"
          width="110"
          height="55"
        >
      </a>
    {% else %}
      <h1 class="text-2xl font-semibold">{{ shop.name }}</h1>
    {% endif %}

    <!-- Mobile Menu Button -->
    <button id="mobile-toggle" class="lg:hidden p-2 relative !z-50 !right-0 transition">
      <!-- Hamburger Icon -->
      <svg
        id="icon-hamburger"
        class="w-6 h-6 block"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16"/>
      </svg>

      <!-- Cross Icon -->
      <svg
        id="icon-close"
        class="w-6 h-6 hidden"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Navigation -->
    <nav
      id="nav-menu"
      class="flex-col lg:flex-row flex !z-30 lg:flex !items-center lg:!justify-end justify-center lg:!gap-[128px] gap-10 text-[#010101] text-base opacity-80 font-medium absolute lg:static top-[70px] !left-0 !w-full !h-full lg:w-auto bg-red-400 lg:bg-transparent shadow-lg lg:shadow-none p-4 lg:p-0 transform -translate-y-full lg:translate-y-0 transition-transform duration-300 ease-in-out"
         >
      <!-- Navigation Links -->
      <div class="lg:!flex max-lg!flex-col gap-[30px]">
        <a
        href="/"
        class="transition-all duration-300 ease-in-out hover:text-[#222D52] hover:font-bold hover:tracking-wide"
        >Home</a
         >
          <!-- Dropdown ... -->
    <button
        id="collection-toggle"
        class="flex items-center gap-1 transition-all duration-300 ease-in-out hover:text-[#222D52] hover:font-bold hover:tracking-wide">
        Collection
        <svg
          id="collection-icon"
          class="transition-transform duration-300"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
              >
          <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
             </svg>
 </button>
          <a
        href="/pages/about-us"
        class="transition-all duration-300 hover:text-[#222D52] hover:font-bold hover:tracking-wide"
        >About Us </a
    >
         <a
        href="/pages/contact"
        class="transition-all duration-300 hover:text-[#222D52] hover:font-bold hover:tracking-wide"
        >Contact Us </a
           >
          <a href="/pages/faqs" class="transition-all duration-300 hover:text-[#222D52] hover:font-bold hover:tracking-wide"
        >FAQ's </a
    >
 </div>

      <div class="!flex !justify-end gap-4">
        {% if section.settings.show_wishlist %}
          <a
            href="#"
            aria-label="Wishlist"
            class="!size-[42px] flex items-center justify-center rounded-full border !border-[#00000066] bg-white hover:bg-gray-100 transition-all duration-300 hover:scale-110"
          >
            <!-- Wishlist SVG -->
            <svg width="22" height="23" fill="none" stroke="black" stroke-opacity="0.4" stroke-width="1.5">
              <path d="M6.87 4.17C4.09 4.17 1.83 6.42 1.83 9.21c0 5.04 5.96 9.62 9.17 10.69 3.21-1.07 9.17-5.65 9.17-10.69 0-2.79-2.26-5.04-5.04-5.04-1.71 0-3.22.84-4.13 2.13-.47-.66-1.09-1.2-1.81-1.57-.72-.37-1.51-.57-2.32-.57Z"/>
            </svg>
          </a>
        {% endif %}
        {% if section.settings.show_search %}
          <a
            href="/search"
            aria-label="Search"
            class="!size-[42px] flex items-center justify-center rounded-full border !border-[#00000066] bg-white hover:bg-gray-100 transition-all duration-300 hover:scale-110"
          >
            <!-- Search SVG -->
            <svg width="22" height="23" fill="none" stroke="#010101" stroke-opacity="0.4" stroke-width="1.5">
              <path d="M15.58 16.08L19.25 19.75M2.75 10.58c0 1.95.77 3.81 2.15 5.19 1.38 1.38 3.24 2.15 5.18 2.15 1.94 0 3.8-.77 5.18-2.15 1.38-1.38 2.15-3.24 2.15-5.19 0-1.94-.77-3.8-2.15-5.18-1.38-1.38-3.24-2.15-5.18-2.15-1.94 0-3.8.77-5.18 2.15C3.52 6.77 2.75 8.64 2.75 10.58Z"/>
            </svg>
          </a>
        {% endif %}
        {% if section.settings.show_cart %}
          <a
            href="/cart"
            aria-label="Cart"
            class="!size-[42px] flex items-center justify-center rounded-full border !border-[#00000066] bg-white hover:bg-gray-100 transition-all duration-300 hover:scale-110"
          >
            <!-- Cart SVG -->
            <svg width="22" height="23" fill="#010101" fill-opacity="0.4">
              <path d="M2.29 4.4c0-.18.07-.35.2-.48.13-.13.3-.2.48-.2h.51c.87 0 1.39.59 1.68 1.13.2.36.34.78.45 1.17h11.45c.76 0 1.31.73 1.1 1.46l-1.67 5.87c-.15.52-.47.99-.91 1.32-.44.33-.98.51-1.53.51H8.74c-.55 0-1.09-.18-1.53-.51-.44-.33-.76-.8-.91-1.33L4.45 6.88c-.14-.53-.27-1.02-.48-1.38-.19-.36-.34-.4-.48-.4h-.51c-.18 0-.35-.07-.48-.2-.13-.13-.2-.3-.2-.48Z"/>
            </svg>
          </a>
        {% endif %}
        {% if section.settings.show_account %}
          <a
            href="/account"
            aria-label="Account"
            class="!size-[42px] flex items-center justify-center rounded-full border !border-[#00000066] bg-white hover:bg-gray-100 transition-all duration-300 hover:scale-110"
          >
            <!-- Account SVG -->
            <svg width="22" height="23" fill="#010101" fill-opacity="0.4">
              <path d="M11 11.5c1.09 0 2.14-.43 2.92-1.21.78-.78 1.21-1.83 1.21-2.91 0-1.09-.43-2.14-1.21-2.92C13.14 3.69 12.09 3.25 11 3.25c-1.09 0-2.14.44-2.92 1.22-.78.78-1.21 1.83-1.21 2.92 0 1.08.43 2.13 1.21 2.91.78.78 1.83 1.21 2.92 1.21Zm6.88 6.87c0 1.38-1.38 1.38-1.38 1.38H4.13s-1.38 0-1.38-1.38c0-1.37 1.38-5.5 8.25-5.5s8.25 4.13 8.25 5.5Z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile Menu Toggle
  const mobileToggle = document.getElementById('mobile-toggle');
  const navMenu = document.getElementById('nav-menu');
  const iconHamburger = document.getElementById('icon-hamburger');
  const iconClose = document.getElementById('icon-close');

  mobileToggle.addEventListener('click', () => {
    const isClosed = navMenu.classList.contains('-translate-y-full');

    if (isClosed) {
      // Open menu
      navMenu.classList.remove('-translate-y-full');
      navMenu.classList.add('translate-y-0');
      document.body.style.overflow = 'hidden'; // Scroll disable
      iconHamburger.classList.add('hidden');
      iconClose.classList.remove('hidden');
    } else {
      // Close menu
      navMenu.classList.add('-translate-y-full');
      navMenu.classList.remove('translate-y-0');
      document.body.style.overflow = ''; // Scroll enable
      iconHamburger.classList.remove('hidden');
      iconClose.classList.add('hidden');
    }
  });
</script>

{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "menu_links",
      "label": "Navigation Menu",
      "default": "main-menu"
    },

    {
      "type": "checkbox",
      "id": "show_wishlist",
      "label": "Show Wishlist Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show Cart Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show Account Icon",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Custom Header"
    }
  ]
}
{% endschema %}
