{% schema %}
{
  "name": "Dummy section",
  "settings": [],
  "blocks": [
    {
      "type": "blog_card",
      "name": "Blog Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "May 25, 2025"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Our Origins in Movement"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Rooted in France, Yogaovaâ„¢ emerged from a desire to bring more style, sustainability...."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dummy section",
      "blocks": [
        { "type": "blog_card" },
        { "type": "blog_card" },
        { "type": "blog_card" }
      ]
    }
  ]
}
{% endschema %}

<style>
  .blog-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 40px 20px;
      font-family: 'Outfit', sans-serif;
  }

  .heading-parent {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 50px;
  }

  .view-all-btn {
    background-color: #00b894;
    color: #fff;
    padding: 10px 18px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    margin-top: 10px;
  }

  .main-heading {
    font-weight: 600;
    font-size: 48px;
    line-height: 100%;
    margin: 0;
  }

  .cards-parent {
    display: flex;
    justify-content: center;
    gap: 24px;
  }

  .card {
    width: 100%;
    max-width: 364px;
    padding: 10px;
    box-sizing: border-box;
  }

  .cards-date {
    color: #414143;
    font-size: 16px;
    line-height: 100%;
    padding-top: 20px;
    padding-bottom: 13px;
    margin: 0;
  }

  .movement-class {
    font-weight: 600;
    line-height: 100%;
    font-size: 24px;
    margin: 0;
  }

  .cards-paragraph {
    color: #414143;
    font-weight: 400;
    font-size: 16px;
    line-height: 160%;
    max-width: 100%;
    margin: 0;
    padding-top: 5px;
    padding-bottom: 9px;
  }
  @media (max-width:1025px){
 .cards-parent {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 24px;
  }
}

  @media (max-width: 767.99px) {
    .main-heading {
      font-size: 32px;
    }

    .view-all-btn {
      align-self: flex-start;
    }
     .card {
    width: 100%;
    max-width: 340px;
    padding: 10px;
    box-sizing: border-box;
  }

  .cards-parent {
    gap: 8px;
  }
}
    @media (max-width:575.99px){
    .main-heading{
    font-size:24px;
}
 .heading-parent {
    margin-bottom: 24px;
  }
}
  
</style>

<section>
  <div class="blog-container">
    <div class="heading-parent">
      <h2 class="main-heading">From The Blog</h2>
      <a href="#" class="view-all-btn">View All Blogs</a>
    </div>

    <div class="cards-parent">
      {% for block in section.blocks %}
        <div class="card">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 600 }}"
              alt="{{ block.settings.title | escape }}"
              width="364"
              height="321"
              style="width: 100%; height: auto;"
            >
          {% endif %}

          <p class="cards-date">{{ block.settings.date }}</p>
          <p class="movement-class">{{ block.settings.title }}</p>
          <p class="cards-paragraph">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

