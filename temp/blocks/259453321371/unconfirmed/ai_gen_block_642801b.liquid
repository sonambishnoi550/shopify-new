{% doc %}
  @prompt
    make a default header which we get when we newly join a theme
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-header-logo-{{ ai_gen_id }} img {
    height: {{ block.settings.logo_height }}px;
    width: auto;
    object-fit: contain;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} {
    height: {{ block.settings.logo_height }}px;
    width: 120px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 30px;
    opacity: 0.5;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.nav_spacing }}px;
    flex-grow: 1;
    justify-content: center;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: {{ block.settings.nav_font_weight }};
    padding: 8px 12px;
    border-radius: 4px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
    background-color: {{ block.settings.nav_hover_bg }};
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
  }

  .ai-header-search-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-header-search-input-{{ ai_gen_id }} {
    width: 200px;
    padding: 8px 40px 8px 12px;
    border: 1px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    background-color: {{ block.settings.search_bg_color }};
    color: {{ block.settings.search_text_color }};
    font-size: 14px;
  }

  .ai-header-search-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.search_placeholder_color }};
  }

  .ai-header-search-button-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: {{ block.settings.search_icon_color }};
    cursor: pointer;
    padding: 4px;
  }

  .ai-header-icon-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    color: {{ block.settings.icon_color }};
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
    position: relative;
  }

  .ai-header-icon-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
    background-color: {{ block.settings.icon_hover_bg }};
  }

  .ai-header-cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: 2px;
    right: 2px;
    background-color: {{ block.settings.cart_count_bg }};
    color: {{ block.settings.cart_count_text }};
    font-size: 10px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 16px;
    text-align: center;
    line-height: 1.2;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-search-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-mobile-menu-{{ ai_gen_id }} {
      display: block;
    }

    .ai-header-search-input-{{ ai_gen_id }} {
      width: 150px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-header-logo-{{ ai_gen_id }} img {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-header-logo-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
      width: 100px;
    }
  }
{% endstyle %}

<header class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-logo-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <a href="/">
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name | escape }}"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
            loading="lazy"
          >
        </a>
      {% else %}
        <a href="/">
          <div class="ai-header-logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        </a>
      {% endif %}
    </div>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% for link in linklists[block.settings.menu].links %}
        <a href="{{ link.url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <div class="ai-header-actions-{{ ai_gen_id }}">
      {% if block.settings.show_search %}
        <div class="ai-header-search-{{ ai_gen_id }}">
          <form action="/search" method="get" role="search">
            <input
              type="search"
              name="q"
              class="ai-header-search-input-{{ ai_gen_id }}"
              placeholder="{{ block.settings.search_placeholder }}"
              value="{{ search.terms | escape }}"
            >
            <button type="submit" class="ai-header-search-button-{{ ai_gen_id }}" aria-label="Search">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </button>
          </form>
        </div>
      {% endif %}

      {% if block.settings.show_account %}
        <a href="/account" class="ai-header-icon-button-{{ ai_gen_id }}" aria-label="Account">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
      {% endif %}

      {% if block.settings.show_cart %}
        <a href="/cart" class="ai-header-icon-button-{{ ai_gen_id }}" aria-label="Cart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z"></path>
            <path d="M20 22C20.5523 22 21 21.5523 21 21C21 20.4477 20.5523 20 20 20C19.4477 20 19 20.4477 19 21C19 21.5523 19.4477 22 20 22Z"></path>
            <path d="M1 1H5L7.68 14.39C7.77144 14.8504 8.02191 15.264 8.38755 15.5583C8.75318 15.8526 9.2107 16.009 9.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="ai-header-cart-count-{{ ai_gen_id }}">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      {% endif %}

      <button class="ai-header-icon-button-{{ ai_gen_id }} ai-header-mobile-menu-{{ ai_gen_id }}" aria-label="Menu">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</header>

